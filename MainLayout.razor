@using SaveSyncNew.Components

@inject DialogService DS

@inherits LayoutComponentBase

<RadzenDialog />
<RadzenNotification Style="position: absolute; left:40%; top:3%;"></RadzenNotification>

<RadzenLayout>
    <RadzenHeader>
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">
            <RadzenSidebarToggle Click="@(() => sidebar1Expanded = !sidebar1Expanded)" />
            <RadzenLabel Text="โปรแกรมบันทึกข้อมูลลูกค้า Sync New" />
        </RadzenStack>
    </RadzenHeader>
    <RadzenSidebar @bind-Expanded="@sidebar1Expanded" Style="width:250px;">
        <RadzenPanelMenu>
            <RadzenPanelMenuItem Text="หน้าแรก" Icon="home" Path="/" />
            <RadzenPanelMenuItem Text="ลูกค้า" Icon="account_box" Path="/customer" Click="OpenProgressBar"/>
        </RadzenPanelMenu>
        <div class="rz-p-4">
            Sidebar
        </div>
    </RadzenSidebar>
    <RadzenBody Style="padding:10px;">
        <div>
            @Body
        </div>
    </RadzenBody>
    <RadzenFooter>
        Footer
    </RadzenFooter>
</RadzenLayout>

@code {
    bool sidebar1Expanded = true;

    public void OpenProgressBar()
    {
        DS.Open("กำลังโหลดข้อมูล", ds =>@<ProgressBar></ProgressBar>);
    }
}
